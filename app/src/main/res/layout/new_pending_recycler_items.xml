<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_rl"
        android:clickable="true"
        android:minHeight="@dimen/_100sdp"
        app:cardBackgroundColor="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="@dimen/_5sdp"
        android:outlineSpotShadowColor="@color/primary_orange_color"
        android:outlineAmbientShadowColor="@color/primary_orange_color"
        >
    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:id="@+id/hab_rl"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clicked_items"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="@dimen/_5sdp"/>
        <ImageView

            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/select_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/oval"
            />


        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_upload_icon"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_icon"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_icon_gallery"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_toLeftOf="@id/select_icon"
            android:layout_toRightOf="@+id/view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/hab_name"
            android:textColor="@color/black"
            android:padding="@dimen/_7sdp"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>